<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Discussion Posts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <!-- <h3><%= @user.points %></h3> -->
    <% if @user.points > "0" %>
      <ul class="users follow">
           You have
        <%= @user.points %>
         points
      </ul>
     <% end %>
      <% if current_user.admin%>
          <%= form_for(@user) do |f| %>
         <%= render 'shared/error_messages', object: f.object %>
        Edit
        <%= f.label :points %>
        <%= f.text_field :points, class: 'form-control' %>

        <%= f.submit "Save changes", class: "btn btn-primary" %>

      <% end %>
    <% end %>
  </div>
</div>
